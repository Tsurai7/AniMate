<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AniMate_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AniMate_app.View">
    <TabBar>
        <ShellContent Title="Home"
          Icon="home.svg" Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent Title="Search"
          Icon="search.svg">
            <local:SearchPage />
        </ShellContent>
        <ShellContent Title="Notifications"
          Icon="ring.svg">
            <local:NotificationPage />
        </ShellContent>
        <ShellContent Title="Profile"
          Icon="user.svg">
            <local:ProfilePage />
        </ShellContent>
    </TabBar>
</Shell>
