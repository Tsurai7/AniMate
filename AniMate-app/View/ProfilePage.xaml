<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AniMate_app.View.ProfilePage">
    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>

        <StackLayout  Orientation="Horizontal" VerticalOptions="CenterAndExpand" HorizontalOptions="End" Grid.Row="0">
            <Button >
                <Button.ImageSource>
                    <FileImageSource File="{AppThemeBinding Light= settings.svg, Dark= settings.svg}" />
                </Button.ImageSource>
            </Button>
        </StackLayout>

        <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" HorizontalOptions="Start" Grid.Row="1">
            <Frame CornerRadius="100" WidthRequest="150" HeightRequest="150" Padding="0" HasShadow="False" Margin=" 10,0,0,0">
                <Image Source="ava.jpg" Aspect="AspectFill"/>
            </Frame>

            <Label Text=" Nickname" VerticalOptions="CenterAndExpand" Margin=" 10,0,0,0" FontAttributes="Bold" FontSize="18"/>
        </StackLayout>



    </Grid>
    <ContentPage.Title>
        <x:Null />
    </ContentPage.Title>
</ContentPage>