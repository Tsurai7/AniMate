<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AniMate_app.ViewModel"
             xmlns:model="clr-namespace:AniMate_app.Model"
             x:Class="AniMate_app.MainPage"
             x:DataType="local:MainViewModel">
            
    <StackLayout>

        <Image Source="logo.svg"
               MaximumHeightRequest="50"
               MaximumWidthRequest="100"
               HorizontalOptions="Start"
               VerticalOptions="Start"
               Margin="20, 20, 0, 0"/>

        <CollectionView ItemsSource="{Binding Titles}" ItemsLayout="HorizontalList">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Title">
                    <Frame
                    BackgroundColor="Green">
                        <StackLayout>
                            <Label Text="{Binding Name}" />
                            <Label Text="{Binding Image}" />
                            <Label Text="{Binding Description}" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>



    </StackLayout>



</ContentPage>
