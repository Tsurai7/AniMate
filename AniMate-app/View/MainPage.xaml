<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AniMate_app.ViewModel"
            
             x:Class="AniMate_app.MainPage"
             x:DataType="local:MainViewModel">
            
    <StackLayout>

        <Image Source="logo.svg"
               MaximumHeightRequest="50"
               MaximumWidthRequest="100"
               HorizontalOptions="Start"
               VerticalOptions="Start"
               Margin="20, 20, 0, 0"/>

        <CollectionView ItemsSource="{Binding YourItemsSource}" ItemsLayout="HorizontalList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid BackgroundColor="LightBlue" Margin="5" WidthRequest="200" HeightRequest="250">
                        <Image Source="{Binding Image}" Aspect="AspectFill" />
                        <Label Text="{Binding Name}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                        <!-- You can add more labels or UI elements to display other properties -->
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>



    </StackLayout>



</ContentPage>
