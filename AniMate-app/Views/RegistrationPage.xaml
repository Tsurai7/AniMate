<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AniMate_app.Views.RegistrationPage"
             >
    <Grid 
      VerticalOptions="CenterAndExpand">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Text="Регистрация"
           FontSize="Large"
           Grid.Row="0"
           HorizontalOptions="Center">

        </Label>

        <StackLayout Orientation="Vertical"
                 Grid.Row="1"
                 Margin="20,0,20,0">
            <Label Text="Логин"
               FontSize="Small"
               Margin="0,20,0,5">

            </Label>

            <Frame Padding="10"
               CornerRadius="10"
               x:Name="loginFrame">
                <Entry x:Name="usernameEntry"
                   Placeholder="Логин"
                   Focused="usernameEntry_Focused"
                   Unfocused="usernameEntry_Unfocused"
                   />
            </Frame>
        </StackLayout>

        <StackLayout Orientation="Vertical"
                     Grid.Row="2"
                     Margin="20,10,20,0">
            <Label Text="Пароль"
                   FontSize="Small"
                   Margin="0,0,0,5"
       >

            </Label>

            <Frame Padding="10"
                   CornerRadius="10"
                   Margin="0,0,0,0"
                   x:Name="passwordFrame">
                <Entry x:Name="passwordEntry"
                       Placeholder="Пароль"
                       IsPassword="True"
                       Focused="passwordEntry_Focused"
                       Unfocused="passwordEntry_Unfocused"/>
            </Frame>

            
        </StackLayout>
        
        <StackLayout Orientation="Vertical"
                 Grid.Row="3"
                 Margin="20,10,20,0">
            <Label Text="Повторите пароль"
               FontSize="Small"
               Margin="0,0,0,5"
               >

            </Label>

            <Frame Padding="10"
               CornerRadius="10"
               Margin="0,0,0,0"
               x:Name="passwordConfirmFrame">
                <Entry x:Name="passwordConfirmEntry"
                Placeholder="Повторите пароль"
                IsPassword="True"
                Focused="passwordConfirmEntry_Focused"
                Unfocused="passwordConfirmEntry_Unfocused"/>
            </Frame>

            <Label
               FontSize="Micro"
               Margin="0,5,0,0"
               >
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Уже есть аккаунт? " />
                        <Span Text=" Войти"
                              TextColor="Blue" />
                    </FormattedString>
                </Label.FormattedText>
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="loginLabelTapped"
                                      >

                    </TapGestureRecognizer>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>


        <Button Grid.Row="4"
            Margin="20,40,20,0"
            HorizontalOptions="FillAndExpand"
            CornerRadius="10"
            Text="Регистрация"
            FontSize="Medium"
            Clicked="RegistrationButton_Clicked"
            BackgroundColor="{AppThemeBinding Light=Black , Dark = White}"
            TextColor="{AppThemeBinding Light=White , Dark = Black}"
            >

        </Button>


    </Grid>

    <ContentPage.Title>
        <x:Null />
    </ContentPage.Title>
</ContentPage>